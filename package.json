{
  "name": "midl-perpetual-exchange",
  "version": "1.0.0",
  "description": "Decentralized perpetual futures exchange built on MIDL Protocol",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter ./apps/dashboard dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "deploy:contracts": "hardhat deploy --network regtest",
    "verify:contract": "hardhat verify --network regtest",
    "hardhat:address": "hardhat midl:address",
    "test": "hardhat test",
    "clean": "pnpm --recursive run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@midl/executor": "^3.0.3",
    "@midl/hardhat-deploy": "^3.0.3",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/hardhat": "^9.1.0",
    "hardhat": "^2.28.3",
    "hardhat-deploy": "^0.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/midl-perpetual-exchange"
  },
  "keywords": [
    "midl",
    "bitcoin",
    "defi",
    "perpetual",
    "futures",
    "trading",
    "blockchain",
    "evm"
  ],
  "author": "Your Team",
  "license": "MIT"
}
